{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/refresh-token.mts",
            "runtimeArgs": [
                "--loader",
                "ts-node/esm"
            ],
            "env": {
                "NODE_ENV": "development",
                "NODE_TLS_REJECT_UNAUTHORIZED": "0"  // Add this if you need to ignore TLS for debugging
            },
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}
